{
    "name":  "otp-dashboard",
    "version":  "1.0.2",
    "description":  "Dashboard de Pedidos - App Electron",
    "main":  "main.js",
    "scripts":  {
                    "start":  "electron .",
                    "dist":  "electron-builder --publish never"
                },
    "build":  {
                  "appId":  "com.otp.dashboard",
                  "productName":  "DashboardPedidos",
                  "files":  [
                                "main.js",
                                "preload.js",
                                "renderer/**/*",
                                "assets/**/*",
                                "package.json"
                            ],
                  "directories":  {
                                      "buildResources":  "assets"
                                  },
                  "win":  {
                              "target":  "nsis",
                              "icon":  "assets/icon.ico"
                          },
                  "mac":  {
                              "target":  "dmg",
                              "icon":  "assets/icon.icns"
                          },
                  "linux":  {
                                "target":  [
                                               "AppImage",
                                               "deb"
                                           ],
                                "icon":  "assets"
                            }
              },
    "devDependencies":  {
                            "electron":  "^30.0.0",
                            "electron-builder":  "^24.0.0",
                            "electron-icon-maker":  "^0.0.5"
                        }
}
